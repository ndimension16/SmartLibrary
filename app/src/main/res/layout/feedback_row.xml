<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="7dp"
        app:cardCornerRadius="2dp"
        app:cardUseCompatPadding="true"
        android:elevation="2.5dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <ImageView
                    android:background="#ccc"
                    android:scaleType="fitXY"
                    android:id="@+id/imgBook"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:src="@drawable/eco_1"/>
                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:id="@+id/tvBookTitle"
                        android:text="Junior Android Developer"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#2d2d2d"
                        android:textSize="14sp"
                        android:id="@+id/tvAuthor"
                        android:text="Author : Soumya"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#716d6d"
                        android:textSize="14sp"
                        android:id="@+id/tvFeedbackContent"
                        android:text="This is my world. Make it large"/>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:visibility="invisible"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:orientation="horizontal">

                        </LinearLayout>
                        <LinearLayout
                            android:gravity="right"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/ic_clock_blue"/>
                            <TextView
                                android:id="@+id/tvDate"
                                android:textSize="12sp"
                                android:textColor="#3e3e3e"
                                android:layout_marginLeft="5dp"
                                android:text="03 Sep,2018"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/imgEdit"
                android:layout_gravity="right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_edit"/>
        </FrameLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>