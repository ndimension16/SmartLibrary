<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout
    android:id="@+id/llHeader"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:layout_weight="0.28">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorAccent"
            android:padding="5dp">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgProfile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:civ_border_width="1dp"
                app:civ_border_color="@android:color/white"
                android:visibility="visible"
                android:src="@drawable/nouser"
                android:layout_margin="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
               >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ahmad Publication"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="soumyaghosh269@gmail.com"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                   />
            </LinearLayout>
                <ImageView
                    android:layout_gravity="bottom"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_right"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</FrameLayout>
</LinearLayout>
<LinearLayout
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:layout_weight="0.8">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/llHome"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:padding="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgHome"
                android:src="@drawable/ic_home"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="24dp"
               />
            <TextView
                android:id="@+id/tvHome"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#262626"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llFeatured"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:padding="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgFeatured"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:src="@drawable/ic_featured"
                android:layout_height="24dp" />
            <TextView
                android:id="@+id/tvFeatured"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Featured books"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#262626"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llScanner"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:padding="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgScanner"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_scanner"/>
            <TextView
                android:id="@+id/tvScanner"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Scanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#262626"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llFeedback"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:padding="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgFeedback"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_feedback"/>
            <TextView
                android:id="@+id/tvFeedback"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#262626"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llShare"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:padding="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgShare"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_share"/>
            <TextView
                android:id="@+id/tvShare"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#262626"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llSettings"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:padding="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgSettings"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_settings"/>
            <TextView
                android:id="@+id/tvSettings"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#262626"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llLogout"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:padding="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgLogout"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_logout"/>
            <TextView
                android:id="@+id/tvLogout"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Log out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#262626"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"/>
</LinearLayout>
</LinearLayout>